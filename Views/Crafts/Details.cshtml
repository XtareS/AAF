@model AAF.Data.Entities.Craft

@{
    ViewData["Title"] = "Detalhes do artigo";
}



<div class="container align-content-center">
    <br><br>



    <h1>Detalhes do artigo </h1>

    <hr />

    <div class="Card mt-3 col-12">

        <div class="row align-content-center">
            <div class=" mt-3 col-12">
                <div class=" row d-flex col-12 ">
                    <div class="row align-content-center text-center col-12 ">
                        <div class="col-4 text-center text-uppercase text-light modal-button  ">
                            @Html.DisplayNameFor(model => model.Name)
                        </div>

                        <div class="col-8 text-center text-uppercase text-warning modal-button  ">

                            <span class="mt-6 mb-6"> @Html.DisplayFor(model => model.Name)</span>

                        </div>


                    </div>
                    <br />

                    <div class="row align-content-center text-center col-12 ">
                        <div class="col-4 text-center text-uppercase text-light modal-button  ">
                            @Html.DisplayNameFor(model => model.ImageFront)
                        </div>

                        <div class="col-8 text-center text-uppercase text-warning modal-button  ">

                            <span class="mt-6 mb-6"> @Html.DisplayFor(model => model.ImageFront)</span>

                        </div>


                    </div>
                    <br />

                    <div class="row align-content-center text-center col-12 ">
                        <div class="col-4 text-center text-uppercase text-light modal-button  ">
                            @Html.DisplayNameFor(model => model.ImageBack)
                        </div>

                        <div class="col-8 text-center text-uppercase text-warning modal-button  ">

                            <span class="mt-6 mb-6"> @Html.DisplayFor(model => model.ImageBack)</span>

                        </div>


                    </div>
                    <br />

                    <div class="row align-content-center text-center col-12 ">
                        <div class="col-4 text-center text-uppercase text-light modal-button  ">
                            @Html.DisplayNameFor(model => model.Price)
                        </div>

                        <div class="col-8 text-center text-uppercase text-warning modal-button  ">

                            <span class="mt-6 mb-6"> @Html.DisplayFor(model => model.Price)</span>

                        </div>


                    </div>
                    <br />

                    <div class="row align-content-center text-center col-12 ">
                        <div class="col-4 text-center text-uppercase text-light modal-button  ">
                            @Html.DisplayNameFor(model => model.Disponivel)
                        </div>

                        <div class="col-8 text-center text-uppercase  modal-button  ">

                            <span class="mt-6 mb-6"> @Html.DisplayFor(model => model.Disponivel)</span>

                        </div>


                    </div>
                    <br />

                    <div class="row align-content-center text-center col-12 ">
                        <div class="col-4 text-center text-uppercase text-light modal-button  ">
                            @Html.DisplayNameFor(model => model.Stock)
                        </div>

                        <div class="col-8 text-center text-uppercase text-warning modal-button  ">

                            <span class="mt-6 mb-6"> @Html.DisplayFor(model => model.Stock)</span>

                        </div>


                    </div>
                    <br />


                </div>
                </div>
        </div>

        <div class="row  mt-2 mb-3">
            <div class="btn modal-button m-auto col-6 ">
                <a class="nav-link text-warning" data-text="Editar o artigo" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            </div>
           
            <div class="btn modal-button m-auto col-6 ">
                <a class="nav-link" data-text="Voltar à lista" asp-action="Index">Voltar à Montra</a>
            </div>

        </div>

    </div>
</div>