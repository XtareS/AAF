@model AAF.Data.Entities.Craft

@{
    ViewData["Title"] = "Criar novo artigo";
}

<div class="container align-content-center">
    <br><br>



    <h1>Arts & Crafts </h1>


    <div class="Card mt-3 col-12">

        <div class="row">
            <div class=" mt-3 col-12">
                <div class="col-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageFront" class="control-label"></label>
                            <input asp-for="ImageFront" class="form-control" />
                            <span asp-validation-for="ImageFront" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageBack" class="control-label"></label>
                            <input asp-for="ImageBack" class="form-control" />
                            <span asp-validation-for="ImageBack" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Stock" class="control-label"></label>
                            <input asp-for="Stock" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

                <div class="btn modal-button m-auto col-12 ">

                    <a class="nav-link" data-text="Voltar à lista" asp-action="Index">Voltar à Montra</a>
                </div>

            </div>

       



        </div>


    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
