@model AAF.Data.Entities.Ringer

@{
    ViewData["Title"] = "Editar o artigo";
}

<div class="container align-content-center">
    <br><br>



    <h1>Editar o artigo </h1>
    <hr />

    <div class="Card mt-3 col-12">

        <div class="row">
            <div class=" mt-3 col-12">
                <div class="col-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row form-group">
                            <label asp-for="Name" class=" btn modal-button control-label text-warning col-4"></label>
                            <input asp-for="Name" class=" col-8 form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="row form-group">
                            <label asp-for="ImageFront" class=" btn modal-button control-label text-warning col-4"></label>
                            <input asp-for="ImageFront" class=" col-8 form-control" />
                            <span asp-validation-for="ImageFront" class="text-danger"></span>
                        </div>
                        <div class="row form-group">
                            <label asp-for="ImageBack" class=" btn modal-button control-label text-warning col-4"></label>
                            <input asp-for="ImageBack" class=" col-8 form-control" />
                            <span asp-validation-for="ImageBack" class="text-danger"></span>
                        </div>
                        <div class=" row form-group">
                            <label asp-for="Price" class=" btn modal-button control-label text-warning col-4"></label>
                            <input asp-for="Price" class=" col-8 form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="row form-group">
                            <label asp-for="Stock" class=" btn modal-button control-label text-warning col-4"></label>
                            <input asp-for="Stock" class="col-8 form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="row form-group form-check">
                            <label class=" btn modal-button control-label text-warning ml-n3 col-2 ">
                                <span class="col-2"> @Html.DisplayNameFor(model => model.Disponivel)</span>
                                <input class="col-2 form-check-input" asp-for="Disponivel" />

                            </label>
                        </div>
                        <div class="row ">
                            <div class=" btn m-auto modal-button form-group col-6">

                                <input type="submit" value="Salvar a Edição" class=" col-12 btn  text-uppercase text-success  " />
                                <br>
                            </div>
                            <div class="btn modal-button m-auto col-6 ">
                                <a class="nav-link" data-text="Voltar à lista" asp-action="Index">Voltar à Montra</a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>





        </div>


    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
