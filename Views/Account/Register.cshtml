@model AAF.Models.RegisterNewUserViewModel

@{
    ViewData["Title"] = "Novo Registo";
}

<br />
<br />
<br />

<h2> Registar a sua Conta</h2>

<br />
<br />


<div class="container m-auto ">
    <div class="row">
        <div class=" mt-3 col-12">
            <div class="col-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="row form-group">

                        <label asp-for="FirstName" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="FirstName" class=" col-8 form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div>

                    <div class="row form-group">

                        <label asp-for="LastName" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="LastName" class=" col-8 form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>

                    <div class="row form-group">

                        <label asp-for="UserName" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="UserName" class=" col-8 form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>

                    <div class="row form-group">

                        <label asp-for="Email" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="Email" type="email" class=" col-8 form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                    <div class="row form-group">

                        <label asp-for="Password" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="Password" type="password" class=" col-8 form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>

                    <div class="row form-group">

                        <label asp-for="Confirm" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="Confirm" type="password" class=" col-8 form-control" />
                        <span asp-validation-for="Confirm" class="text-danger"></span>

                    </div>

                    <div class=" btn  modal-button form-group col-4 ">

                        <input type="submit" value="Registar" class="nav-link btn text-uppercase " />

                        <br>

                    </div>


                </form>


            </div>

        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
