@model AAF.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Nova PAssword";
}

<br />
<br />
<br />

<h2> Alterar Password</h2>

<br />
<br />


<div class="container m-auto ">
    <div class="row">
        <div class=" mt-3 col-12">
            <div class="col-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="row form-group">

                        <label asp-for="OldPassword" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="OldPassword" type="password" class=" col-8 form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>

                    </div>

                    <div class="row form-group">

                        <label asp-for="NewPassword" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="NewPassword" type="password" class=" col-8 form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>

                    </div>

                    <div class="row form-group">

                        <label asp-for="Confirm" class=" btn modal-button control-label text-warning col-4"></label>
                        <input asp-for="Confirm" type="password" class=" col-8 form-control" />
                        <span asp-validation-for="Confirm" class="text-danger"></span>

                    </div>


                    <div class=" btn  modal-button form-group col-4 ">

                        <input type="submit" value="Confirmar Alterações" class="nav-link btn text-uppercase " />
                        <a asp-action="ChangeUser" class="nav-link btn text-uppercase ">Mudar o Cliente</a>
                        <br>

                    </div>

                    <div class="text-uppercase text-success ">@ViewBag.UserMessage</div>

                </form>


            </div>

        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

